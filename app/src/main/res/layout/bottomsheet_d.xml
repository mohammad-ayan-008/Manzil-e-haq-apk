<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_text"
        android:clickable="true"
        android:drawableStart="@color/md_theme_dark_onPrimaryContainer"
        android:drawablePadding="8dp"
        android:drawableTint="@color/md_theme_dark_onPrimaryContainer"
        android:drawableTintMode="src_atop"
        android:fontFamily="@font/font1"
        android:foreground="?attr/selectableItemBackground"
        android:padding="8dp"
        android:text="Welcome to Our Application"

        android:textColor="@color/black"
        android:textSize="24sp"
        tools:text="Welcome to Our Application" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font1"
        android:paddingTop="8dp"
        android:text="This Application is been created as a non profitable app if you found any bug or want any new feature you can Email us"
        android:textColor="@color/md_theme_dark_onPrimaryContainer"
        android:textSize="16sp"
        tools:text="" />

    <Button
        android:id="@+id/buttonAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:foreground="?attr/selectableItemBackground"
        android:padding="12dp"
        android:text="Email"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        tools:background="@color/primaryColor"
        tools:text="visit site" />

</LinearLayout>
